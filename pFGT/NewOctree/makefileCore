
INCLUDE = ${DENDRO_INCLUDE} ${PETSC_INCLUDE} 

LIBS = ${DENDRO_LIB} ${PETSC_LIB} 

all : runOctree

%.o: %.$(CEXT)
	$(PCC) -c $(CFLAGS) $(INCLUDE) $< -o $@

runOctree : ./runOctree.o ./splitSources.o ./pfgtOctUtils.o ./s2w.o ./w2l.o ./l2t.o ./d2d.o
	$(PCC) $(CFLAGS) $^ -o $@ $(LIBS) 

clean :
	rm -rf runOctree
	rm -rf *.o


